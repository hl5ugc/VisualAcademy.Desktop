<Window x:Class="VisualAcademy.Desktop.Rias.RiaStackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualAcademy.Desktop.Rias"
        mc:Ignorable="d"
        Title="RiaStackPanel" Height="300" Width="400">
    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel>
            <StackPanel Margin="5">
                <Button Content="안녕하세요" Margin="0 5 0 5"/>
                <Button Content="반갑습니다." Margin="0 5 0 5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Content="또 만나요" Padding="5 0 5 0" Margin="0 0 5 0"/>
                <Button Content="낼 봐요." Margin="5 0 0 0" Padding="5 0 5 0"/>
            </StackPanel>
            <StackPanel Margin="5 10 5 0" Background="Yellow">
                <Button Content="패내마외." Height="100" HorizontalAlignment="Left"
                        Margin="5" Padding="10"/>
            </StackPanel>
        </StackPanel>    
        
    </Grid>
</Window>
