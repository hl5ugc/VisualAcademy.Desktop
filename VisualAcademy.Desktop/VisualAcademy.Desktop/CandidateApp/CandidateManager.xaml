<Window x:Class="VisualAcademy.Desktop.CandidateApp.CandidateManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualAcademy.Desktop.CandidateApp"
        mc:Ignorable="d"
        Title="CandidateManager" Height="450" Width="800" FontSize="30">
    <Grid>
        <Button x:Name="btnAddCandidate"  Width="100" Margin="20" 
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Click="btnAddCandidate_Click">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/plus-2x.png" Height="16" Width="16" Margin="5 0 5 0"></Image>
                    <TextBlock Text="Add"></TextBlock>
                </StackPanel>
            </Button.Content>
        </Button>
    </Grid>
</Window>
